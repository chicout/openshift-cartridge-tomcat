#!/bin/bash -e

case "$1" in
  -v|--version)
    version="$2"
esac

source $OPENSHIFT_CARTRIDGE_SDK_BASH
source ${OPENSHIFT_TOMCAT_DIR}/bin/util

echo "$version" > "$OPENSHIFT_TOMCAT_DIR/env/OPENSHIFT_TOMCAT_VERSION"

sed -i "s/{APP_NAME}/${OPENSHIFT_APP_NAME}/g" ${OPENSHIFT_TOMCAT_DIR}/template/pom.xml

# Create and install the initial template WAR
pushd $OPENSHIFT_TOMCAT_DIR/template/src/main/webapp 1>/dev/null
  jar cvf $OPENSHIFT_TOMCAT_DIR/webapps/ROOT.war ./*
popd 1>/dev/null

# Set up the default path and JAVA_HOME
export JAVA_HOME=$OPENSHIFT_TOMCAT_JDK7
reinstall_path

if [ -z "$OPENSHIFT_TOMCAT_HAZELCAST_CLUSTER" ]; then
  touch $OPENSHIFT_TOMCAT_DIR/env/OPENSHIFT_TOMCAT_HAZELCAST_CLUSTER
fi

OPENSHIFT_TOMCAT_PROXY_IP=$(ping -c 1 ${OPENSHIFT_GEAR_DNS} | awk '{ print $3 ; exit }' | sed 's/(//g' | sed 's/)//g')

if [ -z "$OPENSHIFT_TOMCAT_CLUSTER_PROXY_PORT" ]; then
  OPENSHIFT_TOMCAT_TOMCAT_PROXY_PORT=7600
fi

if [ -z "$OPENSHIFT_TOMCAT_HAZELCAST_CLUSTER" ]; then
  OPENSHIFT_TOMCAT_HAZELCAST_CLUSTER="${OPENSHIFT_TOMCAT_IP}:${OPENSHIFT_TOMCAT_HAZELCAST_PORT}"
fi

pushd $OPENSHIFT_TOMCAT_DIR > /dev/null
    sed -i -e "s/\${env.OPENSHIFT_TOMCAT_HAZELCAST_PROXY_PORT}/${OPENSHIFT_TOMCAT_HAZELCAST_PROXY_PORT}/g" \
           -e "s/\${env.OPENSHIFT_TOMCAT_HAZELCAST_PORT}/${OPENSHIFT_TOMCAT_HAZELCAST_PORT}/g" \
           -e "s/\${env.OPENSHIFT_TOMCAT_PROXY_IP}/${OPENSHIFT_TOMCAT_PROXY_IP}/g" \
           -e "s/\${env.OPENSHIFT_TOMCAT_IP}/${OPENSHIFT_TOMCAT_IP}/g" \
           -e "s/\${env.OPENSHIFT_TOMCAT_HAZELCAST_CLUSTER}/${OPENSHIFT_TOMCAT_HAZELCAST_CLUSTER}/g" \
           $OPENSHIFT_TOMCAT_DIR/versions/shared/conf/cluster.xml

    sed -i -e "s|\${env.OPENSHIFT_TOMCAT_LOG_DIR}|${OPENSHIFT_TOMCAT_LOG_DIR}|g" $OPENSHIFT_TOMCAT_DIR/versions/shared/conf/logging.properties
popd > /dev/null